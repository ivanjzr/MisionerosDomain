// FunciÃ³n para generar URL desde model_name
function generateMenuUrl($model_name) {
    if (empty($model_name)) {
        return '#';
    }
    
    // Convertir puntos a diagonales
    $path = str_replace('.', '/', $model_name);
    
    // Construir URL completa
    return '/admin/' . $path . '/index';
}


